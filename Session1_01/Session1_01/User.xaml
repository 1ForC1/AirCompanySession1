<Window x:Class="Session1_01.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session1_01"
        mc:Ignorable="d"
        Title="User" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Вы вошли, как обычный пользователь" TextAlignment="Center" VerticalAlignment="Center"/>
            <Button Width="100" Height="40" Content="Exit" x:Name="ExitBtn" Click="ExitBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
